{
  "name": "mediamtx-connect",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "typecheck": "tsc --noEmit",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "release": "semantic-release",
    "generate": "prisma generate",
    "migrate": "prisma migrate deploy",
    "db:seed": "npx ts-node --compiler-options '{\"module\":\"CommonJS\"}' src/lib/prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "setup": "./scripts/setup-dev.sh",
    "setup:test-data": "./scripts/setup-test-data.sh",
    "test:e2e": "playwright test",
    "test:e2e:dev": "playwright test --ui",
    "mediamtx": "./scripts/start-mediamtx.sh",
    "mediamtx:stop": "docker compose -f docker-compose.dev.yml --profile streams down",
    "generate-mtx-types": "swagger-typescript-api -p ./lib/MediaMTX/swagger.json -o ./lib/MediaMTX -n generated.ts"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} src/lib/prisma/seed.ts",
    "schema": "src/lib/prisma/schema.prisma"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^7.0.0",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.2.15",
    "axios": "^1.13.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "hls.js": "^1.6.15",
    "lucide-react": "^0.562.0",
    "next": "16.1.4",
    "next-themes": "^0.4.6",
    "node-cron": "^4.2.1",
    "pino": "^10.2.1",
    "prisma": "^7.0.0",
    "react": "^19",
    "react-dom": "^19",
    "react-hook-form": "^7.71.1",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@eslint-react/eslint-plugin": "^2.7.2",
    "@next/eslint-plugin-next": "^16.1.4",
    "@playwright/test": "^1.57.0",
    "@semantic-release-plus/docker": "^3.1.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^25",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "eslint-plugin-react-refresh": "^0.4.26",
    "postcss": "^8",
    "semantic-release": "^25.0.2",
    "swagger-typescript-api": "^13.2.16",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
